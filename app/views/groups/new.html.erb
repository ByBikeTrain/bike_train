<% provide(:title, 'New Group')%>
<h1>New Group</h1>
<div class="row">
	<%= render "shared/error", error: @group  %>
	<div class="span6 offset3">
		<%= form_for(@group) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		
		<%= f.label :description %>
		<%= f.text_field :description %>
		
		
		<%= f.submit "Create Group", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>