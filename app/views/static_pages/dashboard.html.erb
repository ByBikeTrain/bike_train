<% provide(:title, "Dashboard")%>
<h1>Bike Train Community</h1>
<div class="row">
	<div class="span12">
		<h3><%= image_tag current_user.photo.url(:small), size: "50x50" %>  Welcome Back, <%= current_user.name %>!</h3>

		
		<%= link_to "Find a Group", groups_path, class: "btn btn-large btn-primary" if signed_in?%>		
		<%= link_to "Start a Group", new_group_path, class: "btn btn-large btn-primary" if signed_in?%><br/><br/>

		<%= form_tag :controller => 'groups', :action => 'search', :method => 'get' do %>
			<%= text_field_tag :search, params[:search], :id => 'search_field', size: 100, style: "width: 400px" %>
			<%= submit_tag "Search", :name => nil %> 
			<%= link_to_function "Clear", "$('search_field').clear()" %>
		<% end %>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>
						Group Name
					</th>
					<th>
						Route
					</th>
					<th>
						Distance
					</th>
					<th>
						Potential calories burn
					</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						Broklyn Height to Midtown
					</td>
					<td>
						187 Prospect Place, Brooklyn, NY to 25 West 42th Street, New York, NY
					</td>
					<td>
						3.4 miles
					</td>
					<td>
						150
					</td>
				</tr>
			</tbody>
		</table>


	</div>
</div>
